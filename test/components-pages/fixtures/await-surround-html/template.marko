$ var userPromise = new Promise(function(resolve, reject) {
    setTimeout(function() {
        resolve({ name: 'Frank '})
    }, 10);
})

<!DOCTYPE html>

<await(user from userPromise)>
    <html lang="en">
        <head>
            <meta charset="UTF-8"/>
            <title> Marko Test</title>
            <lasso-head/>
        </head>
        <body>
            <div id="test"/>
            <div id="mocha"/>
            <div id="testsTarget" />

            <app-hello name=user.name />

            <lasso-body />

            <init-components/>

            <lasso-slot name="mocha-run" />

            <browser-refresh/>
        </body>
    </html>
</await>
