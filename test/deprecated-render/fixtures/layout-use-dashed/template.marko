<layout-use("./layout-default.marko") show-header=false>
    <layout-put into="body-slot">BODY CONTENT</layout-put>
    <layout-put into="footer-slot">FOOTER CONTENT</layout-put>
</layout-use>
<layout-use("./layout-default.marko") show-header=true>
    <layout-put into="header-slot">HEADER CONTENT</layout-put>
    <layout-put into="body-slot">BODY CONTENT</layout-put>
    <layout-put into="footer-slot">FOOTER CONTENT</layout-put>
</layout-use>
<layout-use("./layout-default.marko") show-header=true>
    <layout-put into="header-slot" value="VALUE HEADER"/>
    <layout-put into="body-slot">BODY CONTENT</layout-put>
    <layout-put into="footer-slot">FOOTER CONTENT</layout-put>
</layout-use>
<layout-use(data.layoutDynamic) show-header=true>
    <layout-put into="body-slot">BODY CONTENT</layout-put>
    <layout-put into="footer-slot">FOOTER CONTENT</layout-put>
</layout-use>