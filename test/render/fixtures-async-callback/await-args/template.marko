<ul>
    <for|userId| of=[0, 1, 2, 3]>
        <li>
            <await(
                data.userInfo.bind(null, {
                    userId: userId
                })
            ) name=("user" + userId)>
                <@then|userInfo|>
                    <ul>
                        <li>
                            <b>Name:</b> ${userInfo.name}
                        </li>
                        <li>
                            <b>Gender:</b> ${userInfo.gender}
                        </li>
                        <li>
                            <b>Occupation:</b> ${userInfo.occupation}
                        </li>
                    </ul>
                </@then>
            </await>
        </li>
    </for>
</ul>