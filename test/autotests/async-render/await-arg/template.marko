<ul>
    <li for(userId in [0, 1, 2, 3])>
        <await(userInfo from data.userInfo) arg={ userId } name=("user" + userId)>
            <ul>
                <li>
                    <b>Name:</b> ${userInfo.name}
                </li>
                <li>
                    <b>Gender:</b> ${userInfo.gender}
                </li>
                <li>
                    <b>Occupation:</b> ${userInfo.occupation}
                </li>
            </ul>
        </await>
    </li>
</ul>
