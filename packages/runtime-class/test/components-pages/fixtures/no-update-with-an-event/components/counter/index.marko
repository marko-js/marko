class {
    onCreate() {
        this.state = {
            count: 0
        };
    }

    onMount() {
        window.counterComponent = this;
    }

    handleClick() {
        this.state.count++;
    }
}
<div key="count">Count: ${state.count}</div>
<button key="button" onClick("handleClick") no-update>
    Increment
</button>