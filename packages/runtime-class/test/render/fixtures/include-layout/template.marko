<${LayoutDefault} show-header=false>
    <@body>BODY CONTENT</@body>
    <@footer>FOOTER CONTENT</@footer>
</>
<${LayoutDefault} show-header=true>
    <@header>HEADER CONTENT</@header>
    <@body>BODY CONTENT</@body>
    <@footer>FOOTER CONTENT</@footer>
</>
<${LayoutDefault} show-header=true>
    <@header>VALUE HEADER</@header>
    <@body>BODY CONTENT</@body>
    <@footer>FOOTER CONTENT</@footer>
