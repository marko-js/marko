static {
    var array1 = ["a", "b", "c"];
    var array2 = ["red", "green", "blue"];
}

$ var i;
$ var item;
$ i = 0;
<while(i < array1.length)>
    $ item = array1[i];
    ${item}
    $ i++;
</while>
$ var i;
$ var item;
$ i = 0;
<while(i < array2.length)>
    <div>
        $ item = array2[i];
        ${item}
    </div>
    $ i++;
</while>