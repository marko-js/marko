<let/counts = [0, 0, 0]/>
<for|count, i| of=counts>
  <let/editing=false/>
  <if=editing>
    <button onClick() {
      counts = [...counts.slice(0, i), count + 1, ...counts.slice(i + 1)];
      editing = false;
    }>
      Confirm ${count + 1}
    </button>
  </if>
  <else>
    <button onClick() { editing = true; }>
      Increment ${count}
    </button>
  </else>
</for>
