{
  "root": true,
  "extends": ["eslint:recommended", "prettier"],
  "parserOptions": {
    "sourceType": "module",
    "impliedStrict": true,
    "ecmaFeatures": {
      "jsx": false
    }
  },
  "globals": {
    "AggregateError": true
  },
  "env": {
    "node": true,
    "mocha": true,
    "es2020": true,
    "browser": true
  },
  "rules": {
    "sort-imports": [
      "error",
      {
        "allowSeparatedGroups": true,
        "ignoreDeclarationSort": true
      }
    ]
  }
}
